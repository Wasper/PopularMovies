<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/movie_review_grid_element">

    <TextView
        android:id="@+id/review_grid_element_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/review_grid_element_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/review_grid_element_see_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/see_on_webpage"/>

</LinearLayout>