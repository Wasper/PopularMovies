<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/details_element_padding"
              android:id="@+id/movie_trailer_grid_element">

    <ImageView
        android:id="@+id/trailer_grid_element_image"
        android:contentDescription="@string/trailer_image_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/trailer_grid_element_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/trailer_title"/>

</LinearLayout>